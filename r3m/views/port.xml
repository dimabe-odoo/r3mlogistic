<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_r3m_port_tree">
      <field name="name">view.r3m.port.tree</field>
      <field name="model">r3m.port</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
          <field name="country_id"/>
        </tree>
      </field>
    </record>


    <record id="view_r3m_port_form" model="ir.ui.view">
      <field name="name">view.r3m.port.form</field>
      <field name="model">r3m.port</field>
      <field name="arch" type="xml">
        <form name="R3M Port Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" placeholder="Nombre del puerto" />
              </h1>
            </div>
            <group>
                <field name="code" placeholder="Código Aduana" />
                <field name="country_id" placeholder="Seleccione el país asociado al puerto"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record id="action_r3m_port_views" model="ir.actions.act_window">
      <field name="name">Puertos de aduana</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">r3m.port</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Puerto de aduanas
        </p>
        <p>
          Click aquí para agregar puerto
        </p>
      </field>
    </record>

    <menuitem id="menu_sale_export" name="Logística" parent="stock.menu_stock_root"  />
    <menuitem id="menu_r3m_port"
              name="Puertos"
              parent="menu_sale_export"
              action="action_r3m_port_views"
    />
  </data>
</odoo>