<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_r3m_brand_tree">
      <field name="name">view.r3m.brand.truck.tree</field>
      <field name="model">r3m.brand.truck</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="logo"/>
        </tree>
      </field>
    </record>


    <record id="view_r3m_port_form" model="ir.ui.view">
      <field name="name">view.r3m.brand.truck.form</field>
      <field name="model">r3m.brand.truck</field>
      <field name="arch" type="xml">
        <form name="R3M Port Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group>
                <field name="logo" />
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record id="action_r3m_brand_truck_views" model="ir.actions.act_window">
      <field name="name">Marcas Camiones</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">r3m.brand.truck</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Marcas de camiones
        </p>
        <p>
          Click aqu√≠ para agregar Marca
        </p>
      </field>
    </record>

    <menuitem id="menu_r3m_brand_truck"
              name="Marca de camiones"
              parent="menu_sale_export"
              action="action_r3m_brand_truck_views"
    />
  </data>
</odoo>