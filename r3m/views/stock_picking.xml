<odoo>
    <data>
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">Export Page</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='extra']" position="after">
                    <page string="Cartocor" id="cartocor_data"
                          attrs="{'invisible':[('picking_type_code', '=', 'internal')]}"
                    >
                        <group name="cartocor_data"
                               position="inside"
                        >
                            <group string="Pedido"
                                   style="width:100%;"
                            >
                                <group>
                                    <field name="r3m_po"/>
                                    <field name="r3m_order"/>
                                    <field name="r3m_destination"
                                           options="{'limit': 10, 'create': true, 'create_edit': true}"/>
                                    <field name="r3m_container"/>
                                    <field name="r3m_booking"/>
                                    <field name="r3m_bl"/>
                                    <field name="r3m_vessel"/>
                                    <field name="r3m_account"/>
                                    <field name="r3m_partner_plant_ids" invisible="1"/>
                                    <field name="r3m_plant_id" domain="[('id','in',r3m_partner_plant_ids)]"/>
                                    <field name="r3m_eta"/>
                                </group>
                                <group>
                                    <field name="remarks"/>
                                </group>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <label for="confirmed_container"
                           attrs="{'invisible': ['|',('picking_type_code','!=','internal'),('has_full_container','=',False)]}"/>
                    <div class="o_row"
                         attrs="{'invisible': ['|',('picking_type_code','!=','internal'),('has_full_container','=',False)]}">
                        <field name="has_full_container" invisible="1"/>
                        <field name="confirmed_container" placeholder="Ingrese Contenedor"
                               attrs="{'invisible': ['|',('picking_type_code','!=','internal'),('has_full_container','=',False)]}"/>
                        <field name="company_id" invisible="1"/>
                        <button type="object" icon="fa-check" name="check_container" string="Confirmar"
                                attrs="{'invisible': ['|',('picking_type_code','!=','internal'),('has_full_container','=',False)]}"/>
                    </div>
                    <field name="lot_products_ids"
                           attrs="{'invisible': ['|',('picking_type_code','!=','internal'),('has_full_container','=',False)]}" widget="one2many">
                        <tree editable="bottom" multi_edit="1" edit="true" create="false" delete="false">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="to_confirm"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                    <button type="object"
                            attrs="{'invisible': ['|',('picking_type_code','!=','internal'),('has_full_container','=',False)]}"
                            icon="fa-check" string="Confirmar" name="confirmed_product"/>
                </xpath>
                <xpath expr="//page[@name='extra']" position="after">
                    <page string="Transporte" id="r3m_transport"
                          attrs="{'invisible':[('picking_type_code', '=', 'internal')]}">
                        <group string="Datos camión">
                            <field name="r3m_truck"/>
                            <field name="r3m_driver"/>
                            <field name="r3m_date_dispatched"/>
                            <field name="r3m_date_on_port"/>
                        </group>

                    </page>
                </xpath>
            </field>
        </record>

        <record id="stock_view_production_lot_form_inherit" model="ir.ui.view">
            <field name="name">stock production lot r3m</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="kilos" placeholder="Kilos"/>
                    <field name="linear_m" placeholder="Linear M"/>
                    <field name="area_sqm" placeholder="Área SQM"/>
                    <field name="container_number" placeholder="N° Contenedor"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
