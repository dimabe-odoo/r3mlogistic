<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_r3m_truck_tree">
      <field name="name">view.r3m.truck.tree</field>
      <field name="model">r3m.truck</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="brand"/>
          <field name="truck_model"/>
          <field name="truck_year" />
        </tree>
      </field>
    </record>


    <record id="view_r3m_truck_form" model="ir.ui.view">
      <field name="name">view.r3m.truck.form</field>
      <field name="model">r3m.truck</field>
      <field name="arch" type="xml">
        <form name="R3M Camiones">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group>
                <field name="brand" />
                <field name="truck_model" />
                <field name="truck_year" />
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record id="action_r3m_truck_views" model="ir.actions.act_window">
      <field name="name">Camiones R3M</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">r3m.truck</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Camiones R3M
        </p>
        <p>
          Click aquí para agregar camión
        </p>
      </field>
    </record>

    <menuitem id="menu_r3m_truck"
              name="Camiones"
              parent="menu_sale_export"
              action="action_r3m_truck_views"
    />
  </data>
</odoo>