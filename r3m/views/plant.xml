<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_r3m_plant_tree">
      <field name="name">view.r3m.plant.tree</field>
      <field name="model">r3m.plant</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="address" />
        </tree>
      </field>
    </record>


    <record id="view_r3m_plant_form" model="ir.ui.view">
      <field name="name">view.r3m.plant.form</field>
      <field name="model">r3m.plant</field>
      <field name="arch" type="xml">
        <form name="R3M plant Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" placeholder="Nombre Planta" />
              </h1>
            </div>
            <group>
                <field name="address" placeholder="Dirección" />
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record id="action_r3m_plant_views" model="ir.actions.act_window">
      <field name="name">Proveedores plantas</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">r3m.plant</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Plantas
        </p>
        <p>
          Click aquí para agregar planta
        </p>
      </field>
    </record>

  </data>
</odoo>